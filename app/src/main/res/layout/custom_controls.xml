<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:id="@+id/custom_controls"
    android:orientation="vertical">

<LinearLayout
    android:layout_gravity="top"
    android:gravity="top"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageButton
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:src="@drawable/ic_baseline_arrow_back_24"
        />
    <TextView
        android:id="@+id/title_control"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blas bla"
        />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <ImageView
            android:clickable="true"
            android:id="@+id/back_control"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_replay_10_24"
            app:tint="@color/white" />

        <ImageView
            android:clickable="true"
            android:id="@+id/playPause"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_play_arrow_24"
            android:focusable="true"
            app:tint="@color/white" />

        <ImageView
            android:clickable="true"
            android:id="@+id/forwardControl"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_forward_10_24"
            app:tint="@color/white" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"

        >
        <SeekBar
            android:id="@+id/seekControl"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="1"


            android:progressTint="@color/white"
            android:thumb="@drawable/seek_bar_thumb"
            android:progress="50" />
        <TextView
            android:id="@+id/timeControl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:textColor="@color/white"
            android:text="Hello">

        </TextView>

    </LinearLayout>




</LinearLayout>