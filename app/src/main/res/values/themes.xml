    <style name="BottomSheetStyle" parent="Widget.Material3.CircularProgressIndicator.ExtraSmall">
        <item name="android:background">@android:color/transparent</item>
        <item name="behavior_peekHeight">512dp</item>
    </style>
    
    <style name="BottomSheetDialogTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>
